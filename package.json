  "license": "MIT",
  "author": "Samuel J Voeller <samuel.voeller@amethyst.live> (https://chat.amethyst.live/)",
  "contributors": [],
  "keywords": [
    "aes",
    "cipher",
    "crypto",
    "cryptography",
    "cryptohash",
    "decryption",
    "encryption",
    "hashes",
    "hashing",
    "library",
    "no-dependencies",
    "no-deps",
    "nodeps",
